{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "taskName": "tsc",
            "command": "tsc",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "args": [
                "-p",
                "."
            ],
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "browser-sync",
            "command": "browser-sync",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "args": [
                "start",
                "--server",
                "--files",
                "\"*.html,",
                "*.css,",
                "*.js,",
                "*.json\"",
                "--startPath",
                "\"./enchant.jsの実験ts編/index.html\""
            ],
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}